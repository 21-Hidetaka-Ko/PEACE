- provide(:title, @title)
.row
  %aside.span4
    %section
      %h1= @user.name
      %span= link_to "view my profile", @user
      %span
        %b 投稿
        = @user.note.count
    %section
      = render 'shared/stats'
      - if @users.any?
        .user_avatars
          - @users.each do |user|
  .span8
    %h3= @title
    - if @users.any?
      %ul.users
        = render @users
      = will_paginate
